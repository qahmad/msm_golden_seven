<div class="container">
    <div class="col-md-6">

        <h1>Actor Details</h1>

        <p>
          <%= @actor.name %>
        </p>
        
        <p>
          <%= @actor.bio %>
        </p>
        
        <p>
          <%= @actor.dob %>
        </p>

        <p>
          <%= @actor.image_url %>
        </p>
        
        <img src="<%= @actor.image_url %>">
        
        <p>
          <%= @actor.created_at%>
        </p>
        
        <a href="/actors" class="btn btn-default">
          Go back
        </a>
        
        <a href="/actors/<%= @actor.id %>/edit" class="btn btn-default">
          Edit actor
        </a>
        
        <a href="/delete_actor/<%= @actor.id %>" class="btn btn-default">
          Delete actor
        </a>
    </div>
</div>