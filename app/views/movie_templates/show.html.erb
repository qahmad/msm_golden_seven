<div class="container">
    <div class="col-md-6">

        <h1>Movie Details</h1>

        <p>
          <%= @movie.title %>
        </p>
        
        <p>
          <%= @movie.year %>
        </p>
        
        <p>
          <%= @movie.duration %>
        </p>

        <p>
          <%= @movie.description %>
        </p>

        <p>
          <%= @movie.image_url %>
        </p>
        
        <img src="<%= @movie.image_url %>">
        
        <p>
          <%= @movie.created_at%>
        </p>
        
        <a href="/movies" class="btn btn-default">
          Go back
        </a>
        
        <a href="/movies/<%= @movie.id %>/edit" class="btn btn-default">
          Edit movie
        </a>
        
        <a href="/delete_movie/<%= @movie.id %>" class="btn btn-default">
          Delete movie
        </a>
    </div>
</div>